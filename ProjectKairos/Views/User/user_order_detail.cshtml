<style type="text/css">
    .wrap-table-shopping-cart {
        margin: 0px 50px 20px 50px;
    }

    .table-custom th {
        width: 20%;
        text-align: right;
        background-color: ghostwhite;
    }

    .title {
        margin-top: 30px;
        margin-left: 50px;
        color: #e65540;
    }
</style>

<!-- Title Page -->
<section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url(../../Content/img/mainIMG/shop-banner.jpg);">
