<!-- 8 SAMPLE PRODUCT ========================================================================= -->
<section class="newproduct bgwhite p-t-45 p-b-105">
    <div class="container">
        <div class="sec-title p-b-60">
            <h3 class="m-text5 t-center">
                Featured Products
            </h3>
        </div>

        <!-- Slide2 -->
        <div class="wrap-slick2">
            <div class="slick2">
                @foreach (var watch in Model)
                {
                    <div class="item-slick2 p-l-15 p-r-15">
                        <!-- Block2 -->
                        <div class="block2">
                            <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
                                <img src="@watch.Thumbnail" alt="IMG-PRODUCT">

                                <div class="block2-overlay trans-0-4">
                                    <div class="block2-btn-addcart w-size1 trans-0-4">
                                        <!-- Button -->
                                        <button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4" type="submit" onclick="addToCartAjax('@watch.WatchID', '@watch.WatchCode')">
                                            Add to Cart
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="block2-txt p-t-20">
                            <a href="@Url.Action("ViewProductDetail", "Watch", new {watchCode = @watch.WatchCode})" class="block2-name dis-block s-text3 p-b-5">
                                @watch.WatchCode
                            </a>
                            <span class="block2-price m-text6 p-r-5">
                                $@watch.Price
                            </span>
                        </div>
                    </div>                  

                }



            </div>
        </div>

    </div>
</section>
<!-- END 8 SAMPLE PRODUCT ===================================================================== -->
