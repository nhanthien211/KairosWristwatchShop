<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" type="image/png" href="~/Content/img/icons/favicon.png">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/user_css")
    @RenderSection("product_checkbox_css", required: false)
</head>
<body class="animsition">
    <!-- Header -->
    <header class="header1">
        <!-- Header desktop -->
        <div class="container-menu-header">
            <div class="wrap_header">
                <!-- Logo -->
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <img src="~/Content/img/icons/logo1.png" alt="IMG-LOGO">
                </a>

                <!-- Menu -->
                <div class="wrap_menu">
                    <nav class="menu">
                        <ul class="main_menu">
                            <li class="@ViewBag.Home">
                                <a href="@Url.Action("Index", "Home")">Home</a>
                            </li>
                            <li class="@ViewBag.Product">
                                <a href="@Url.Action("ViewProduct", "Watch", new { category = "All" })">Shop</a>
                            </li>
                        </ul>
                    </nav>
                </div>

                <!-- Account Icon -->
                <div class="header-icons">
                    <ul class="main_menu">
                        <li>
                            <a href="@Url.Action("ManageCart", "Home")" class="header-wrapicon1 dis-block">
                                <img src="~/Content/img/icons/icon-header-02.png" class="header-icon1" alt="ICON">
                            </a>
                        </li>
                        <span class="linedivide1"></span>
                        <li>
                            <a href="#" class="header-wrapicon1 dis-block">
                                <img src="~/Content/img/icons/icon-header-01.png" class="header-icon1" alt="ICON">
                            </a>
                            <ul class="sub_menu">
                                @if (Session["CURRENT_USER_ID"] != null)
                                {
                                    <li class="@ViewBag.MyAccount">
                                        <a href="@Url.Action("ManageAccount", "User")">My Account</a>
                                    </li>
                                    <li class="@ViewBag.MyOrder">
                                        <a href="@Url.Action("ManageOrder","User")">My Orders</a>
                                    </li>
                                    <li>
                                        @using (@Html.BeginForm("Logout", "Account", FormMethod.Post))
                                        {
                                            <button type="submit" id="logoutButton">Logout</button>
                                        }
                                        
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        @Html.ActionLink("Sign in | Sign Up", "Login", "Account")
                                    </li>
                                }
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </div>

        <!-- Header Mobile ========================================================== -->
        <div class="wrap_header_mobile">
            <!-- Logo moblie -->
            <a href="@Url.Action("Index", "Home")" class="logo-mobile">
                <img src="../Content/img/icons/logo1.png" alt="IMG-LOGO">
            </a>

            <!-- Button show menu -->
            <div class="btn-show-menu">
                <!-- Header Icon mobile -->
                <div class="header-icons-mobile">
                    <ul class="main_menu">
                        <li>
                            <a href="@Url.Action("ManageCart", "Home")" class="header-wrapicon1 dis-block">
                                <img src="~/Content/img/icons/icon-header-02.png" class="header-icon1" alt="ICON">
                            </a>
                        </li>
                        <span class="linedivide1"></span>
                        <li>
                            <a href="#" class="header-wrapicon1 dis-block">
                                <img src="~/Content/img/icons/icon-header-01.png" class="header-icon1" alt="ICON">
                            </a>
                            <ul class="sub_menu">
                                @if (Session["CURRENT_USER_ID"] != null)
                                {
                                    <li class="@ViewBag.MyAccount">
                                        <a href="@Url.Action("ManageAccount", "User")">My Account</a>
                                    </li>
                                    <li class="@ViewBag.MyOrder">
                                        <a href="@Url.Action("ManageOrder","User")">My Orders</a>
                                    </li>
                                    <li>
                                        @Html.ActionLink("Logout", "Logout", "Account")
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        @Html.ActionLink("Sign in | Sign Up", "Login", "Account")
                                    </li>
                                }
                            </ul>
                        </li>

                    </ul>
                </div>

                <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </div>
            </div>
        </div>

        <!-- Menu Mobile -->
        <div class="wrap-side-menu">
            <nav class="side-menu">
                <ul class="main-menu">
                    <li class="item-menu-mobile @ViewBag.Home">
                        <a href="@Url.Action("Index", "Home")">Home</a>

                    </li>
                    <li class="item-menu-mobile @ViewBag.Product">
                        <a href="@Url.Action("ViewProduct", "Watch")">Shop</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    @RenderBody()

    <!-- Footer -->
    <footer class="bg6 p-t-20 p-b-20 p-l-45 p-r-45">
        <div class="flex-w">
            <div class="w-size6 p-t-30 p-l-15 p-r-15 respon3">
                <h4 class="s-text12 p-b-30">
                    GET IN TOUCH
                </h4>

                <div>
                    <p class="s-text7 w-size27">
                        Any questions? Let us know in store at 8th floor, 379 Hudson St, New York, NY 10018 or call us on (+1) 96 716 6879
                    </p>
                </div>
            </div>

            <div class="w-size7 p-t-30 p-l-15 p-r-15 respon4">
                <h4 class="s-text12 p-b-30">
                    Links
                </h4>

                <ul>
                    <li class="p-b-9">
                        <a href="#" class="s-text7">
                            About Us
                        </a>
                    </li>

                    <li class="p-b-9">
                        <a href="#" class="s-text7">
                            Contact Us
                        </a>
                    </li>

                    <li class="p-b-9">
                        <a href="#" class="s-text7">
                            Back To Top
                        </a>
                    </li>
                </ul>
            </div>

            <div class="w-size7 p-t-30 p-l-15 p-r-15 respon4">
                <h4 class="s-text12 p-b-30">
                    Help
                </h4>

                <ul>
                    <li class="p-b-9">
                        <a href="#" class="s-text7">
                            FAQs
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>

    <!-- Back to top -->
    <div class="btn-back-to-top bg0-hov" id="myBtn">
        <span class="symbol-btn-back-to-top">
            <i class="fa fa-angle-double-up" aria-hidden="true"></i>
        </span>
    </div>

    <!-- Container Selection -->
    <div id="dropDownSelect1"></div>
    <div id="dropDownSelect2"></div>

    @Scripts.Render("~/bundles/user_script")
    @RenderSection("loadAddress", required: false)
    <!--===============================================================================================-->
    <script type="text/javascript">
        $('.block2-btn-addcart').each(function () {
            var nameProduct = $(this).parent().parent().parent().find('.block2-name').html();
            $(this).on('click', function () {
                swal(nameProduct, "is added to cart !", "success");
            });
        });
    </script>
    <!--===============================================================================================-->
    <script type="text/javascript">
        $(".selection-1").select2({
            minimumResultsForSearch: 20,
            dropdownParent: $('#dropDownSelect1')
        });

        $(".selection-2").select2({
            minimumResultsForSearch: 20,
            dropdownParent: $('#dropDownSelect2')
        });
    </script>
    <!--===============================================================================================-->
<script type="text/javascript">
    $('.btn-addcart-product-detail').each(function () {
        var nameProduct = $('.product-detail-name').html();
        $(this).on('click', function () {
            swal(nameProduct, "is added to cart !", "success");
        });
    });
</script>
@if (TempData["SHOW_MODAL"] != null)
{
    @Html.Raw(TempData["SHOW_MODAL"]);
}
</body>

</html>
