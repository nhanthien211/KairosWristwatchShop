@{
    ViewBag.Title = "Manage Order";

    ViewBag.Info = "";
    ViewBag.Account = "";
    ViewBag.Order = "active";
    ViewBag.Watch = "";

    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section scripts
{
    <!--Bổ sung script để load table order-->
    @Scripts.Render("~/bundles/datatable_order")
}

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">Orders Management</li>
    </ol>

    <!-- DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-users "></i> Orders List
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Order</th>
                            <th>Customer</th>
                            <th>Order Date</th>
                            <th>Total ($)</th>
                            <th>Status</th>
                            <th>More Details</th>
                        </tr>
                    </thead>                                        
                </table>
            </div>
        </div>
    </div>
</div>

